<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- ######################################################## -->
    <!-- STYLE DES COMPOSANTS POUR L'ACTIONBAR DE LA LIB SHERLOCK -->
    <!-- ######################################################## -->
    
    <style name="Theme.ltp" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_ltp</item>
        <item name="popupMenuStyle">@style/ltp_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/ltp_DropDownListView</item>
        <item name="actionBarTabStyle">@style/ltp_ActionBarTabStyle</item>
        <item name="actionDropDownStyle">@style/ltp_DropDownNav</item>
        <item name="actionBarStyle">@style/ltp_solid_ActionBar</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_ltp</item>
        <item name="android:popupMenuStyle">@style/ltp_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/ltp_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/ltp_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/ltp_DropDownNav</item>
        <item name="android:actionBarStyle">@style/ltp_solid_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_ltp</item>
    </style>

    <style name="ltp_solid_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_ltp</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_ltp</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_ltp</item>
        <item name="progressBarStyle">@style/ltp_ProgressBar</item>
        <item name="android:background">@drawable/ab_solid_ltp</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_ltp</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_ltp</item>
        <item name="android:progressBarStyle">@style/ltp_ProgressBar</item>
    </style>

    <style name="ltp_transparent_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_ltp</item>
        <item name="progressBarStyle">@style/ltp_ProgressBar</item>
        <item name="android:background">@drawable/ab_transparent_ltp</item>
        <item name="android:progressBarStyle">@style/ltp_ProgressBar</item>
    </style>

    <style name="ltp_PopupMenu" parent="@style/Widget.Sherlock.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ltp</item>
    </style>

    <style name="ltp_DropDownListView" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_ltp</item>
    </style>

    <style name="ltp_ActionBarTabStyle" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_ltp</item>
        <item name="android:background">@drawable/tab_indicator_ab_ltp</item>
    </style>

    <style name="ltp_DropDownNav" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_ltp</item>
        <item name="android:background">@drawable/spinner_background_ab_ltp</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ltp</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_ltp</item>
    </style>

    <style name="ltp_ProgressBar" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_ltp</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.ltp.widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/ltp_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/ltp_DropDownListView</item>
        <item name="android:popupMenuStyle">@style/ltp_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/ltp_DropDownListView</item>
    </style>
    
    <!-- ############################################################# -->
    <!-- STYLE DES COMPOSANTS POUR L'IDENTITE VISUEL DE LOCALIZETEAPOT -->
    <!-- ############################################################# -->

    <style name="EditTextltp" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AutoCompleteTextViewltp" parent="android:Widget.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBoxltp" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_light</item>
    </style>

    <style name="RadioButtonltp" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_holo_light</item>
    </style>

    <style name="Buttonltp" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ImageButtonltp" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/btn_default_holo_light</item>
    </style>

    <style name="Spinnerltp" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="Spinnerltp.DropDown">
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="SpinnerDropDownItemltp" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/btn_radio_holo_light</item>
    </style>

    <style name="ProgressBarltp" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo_light</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="SeekBarltp" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_light</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_holo_light</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="RatingBarltp" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_full_holo_light</item>
    </style>

    <style name="RatingBarBigltp">
        <item name="android:progressDrawable">@drawable/ratingbar_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_holo_light</item>
        <item name="android:minHeight">35dip</item>
        <item name="android:maxHeight">35dip</item>
    </style>

    <style name="RatingBarSmallltp">
        <item name="android:progressDrawable">@drawable/ratingbar_small_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_small_holo_light</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="Toggleltp" parent="android:Widget.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle_holo_light</item>
        <item name="android:minHeight">48dip</item>
    </style>

    <style name="ListViewltp" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="ListViewltp.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="SpinnerItemltp" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

</resources>